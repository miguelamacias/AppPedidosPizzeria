<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".controllers.MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/go_to_summary_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_shopping_cart_black_24dp"
        app:fabSize="normal"
        android:onClick="goToSummary"/>

    <fragment
        android:id="@+id/pizza_list_fragment"
        android:name="com.macisdev.apppedidospizzeria.controllers.PizzasListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </fragment>

</FrameLayout>